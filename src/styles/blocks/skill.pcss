.skill__shape {
    width: 200px;
    height: 200px;
    fill: transparent;
    stroke: #ccc;
    stroke-width: 15px;
    transform: rotateX(90)
}
.skill__circle--above {
    width: 200px;
    height: 200px;
    fill: transparent;
    stroke: $skills-color;
    stroke-width: 20px;
    stroke-dasharray: 502;
    stroke-dashoffset: 250;
}