.edit-block {
    width: 100%;
    box-shadow: 4px 4px 20px 0 rgba(grey,0.1);
    background-color: white;
    margin-bottom: 30px;
    padding: 25px 30px 30px 30px;

  @include phones {
    padding: 5%;
  }
}

.edit-block__form {
    margin-top: 35px;
    display: flex;
    @include tablets(){
        flex-direction: column;
        align-items: center;
    }
}
